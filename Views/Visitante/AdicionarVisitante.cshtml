@model Visitante


<form asp-controller="Visitante" asp-action="" method="post">

    <div class="mb-3 col-md-2">
        <label class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
    </div>
    <div class="mb-3 col-md-2">
        <label class="form-label">Disciplina</label>
        <input type="text" asp-for="Documento" class="form-control">
    </div>
    <div class="mb-3 col-md-2">
        <label class="form-label">Sala</label>
        <input type="text" asp-for="DataEntrada" class="form-control">
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>


