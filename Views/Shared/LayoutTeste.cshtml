<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle_Entrada</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Controle_Entrada.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
      @model Morador
        <form asp-controller="Morador" asp-action="InserirMorador" method="post">

            <div class="mb-3 col-md-2">
                <label class="form-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control">
            </div>
            <div class="mb-3 col-md-2">
                <label class="form-label">Unidade</label>
                <input type="text" asp-for="Unidade" class="form-control">
            </div>
            <div class="mb-3 col-md-2">
                <label class="form-label">Placa do Veículo</label>
                <input type="text" asp-for="PlacaVeiculo" class="form-control">
            </div>
            <div class="mb-3 col-md-2">
                <label class="form-label">Telefone</label>
                <input type="text" asp-for="Telefone" class="form-control">
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>
        </form>

    </header>
 


</body>
</html>
